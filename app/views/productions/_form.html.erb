<%= form_for @production, :html => { :class => "form-horizontal production" } do |f| %>

  <% if @production.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@production.errors.count, "error") %> prohibited this production from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @production.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :release_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :release_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:release_date) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                productions_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
